	\tkzText[text centered,opacity=100,fill=gray!20, above=0.1](B){\small $|\psi(x)|^2_{x\ge 0}$}

	\def\ka{1}
	\def\kb{0.5}

	\tkzFct[domain=0:4, line width=1pt]{1+(\ka-\kb)**2/(\ka+\kb)**2+2*(\ka-\kb)*cos(1.5*\ka*x)/(\ka+\kb)}
	\tkzFct[domain=4:8, line width=1pt]{(2*\ka/(\ka+\kb))**2}

