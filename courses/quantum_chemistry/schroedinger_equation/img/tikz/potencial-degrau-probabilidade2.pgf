	\tkzClip[space=1.1]
	
	\tkzDrawX[right,label=x, noticks]
	\tkzDrawY[above,label=$|\psi(x)|^2$, noticks]
	
	\tkzDefPoints{0/0/A, 4/0/B, 4/3/C, 8/3/D}
					
	\tkzDrawSegment[color=red, line width=2pt](A,B)
